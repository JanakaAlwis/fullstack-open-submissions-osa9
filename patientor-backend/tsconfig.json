{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", 
    "moduleResolution": "node", 
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,  
    "isolatedModules": true         
  },
  "include": ["src"]
}
